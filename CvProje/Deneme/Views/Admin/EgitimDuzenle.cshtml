@model Deneme.Models.Egitimler

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Eğitim Düzenle</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            background: linear-gradient(90deg, #C7C5F4, #776BCC);
            color: #fff;
        }

        .container {
            max-width: 500px;
        }

        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
            }

        .baslik {
            text-align: center;
            font-size: 30px;
            font-weight: bold;
            margin-bottom: 2rem;
        }

        .card-button {
            background: #776BCC; /* Arka plan rengi */
            font-size: 12px; /* Daha küçük font boyutu */
            padding: 10px 16px; /* Daha küçük içerik dolgusu */
            border-radius: 20px; /* Daha küçük kenar yarıçapı */
            border: none; /* Kenar çizgisi kaldırıldı */
            font-weight: 700;
            color: #fff; /* Metin rengi */
            cursor: pointer;
            transition: .2s;
            display: block;
            margin: 20px auto 0 auto; /* Ortaya hizala ve üstte 20px boşluk bırak */
        }

            .card-button:hover {
                background-color: #543f86; /* Hover durumunda biraz daha koyu bir renk */
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="card p-4">
            <h2 class="baslik">Eğitimi Düzenle</h2>
            <div class="row">
                @using (Html.BeginForm("EgitimDuzenle", "Admin", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.EgitimID)

                    <div class="mb-3">
                        @Html.LabelFor(model => model.Sinif, "Sınıf", new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.Sinif, new { @class = "form-control", required = "required" }) <br />

                        @Html.LabelFor(model => model.GNO, "GNO", new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.GNO, new { @class = "form-control", required = "required" }) <br />

                        @Html.LabelFor(model => model.Ogrenciler.OgrenciAdi, "Öğrenci Adı", new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.Ogrenciler.OgrenciAdi, new { @class = "form-control", required = "required" }) <br />

                        @Html.LabelFor(model => model.Universiteler.UniversiteAdi, "Üniversite", new { @class = "form-label" })
                        @Html.DropDownListFor(model => model.Universiteler.UniversiteAdi, (SelectList)ViewBag.UniversiteList, "Üniversite Seçiniz", new { @class = "form-control" })

                        @Html.LabelFor(model => model.Bolum.BolumAdi, "Bölüm", new { @class = "form-label" })
                        @Html.DropDownListFor(model => model.Bolum.BolumAdi, (SelectList)ViewBag.BolumList, "Bölüm Seçiniz", new { @class = "form-control" })

                        <button type="submit" class="card-button btn btn-warning mt-3">Düzenlemeyi Kaydet</button>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>
