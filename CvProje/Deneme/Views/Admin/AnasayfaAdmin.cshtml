@model Deneme.Models.AnatabloVM

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Anasayfa Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            background: linear-gradient(90deg, #C7C5F4, #776BCC);
            color: #fff;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            }

        .baslik {
            text-align: center;
            font-size: 36px;
            font-weight: bold;
            margin-bottom: 2rem;
            color: #fff;
        }

        .card-title {
            font-size: 20px;
            font-weight: bold;
        }

        .card-text {
            font-size: 14px;
        }

        .logout-button {
            background-color: transparent;
            border: 2px solid #fff;
            color: #fff;
            padding: 5px 10px;
            border-radius: 5px;
            text-decoration: none;
            position: absolute; /* Mutlak konumlandırma */
            top: 60px; /* Yukarıdan 60 piksel mesafe */
            right: 120px; /* Sağdan 20 piksel mesafe */
        }

            .logout-button:hover {
                background-color: #fff;
                color: #776BCC;
            }

        .card-button {
            background: #776BCC; /* Arka plan rengi */
            font-size: 12px; /* Daha küçük font boyutu */
            padding: 10px 16px; /* Daha küçük içerik dolgusu */
            border-radius: 20px; /* Daha küçük kenar yarıçapı */
            border: none; /* Kenar çizgisi kaldırıldı */
            font-weight: 700;
            color: #fff; /* Metin rengi */
            cursor: pointer;
            transition: .2s;
            position: absolute;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
        }

            .card-button:hover {
                background-color: #543f86; 
            }
    </style>
</head>
<body>

    <div class="container">
        <h2 class="baslik">Admin İşlemleri</h2>
        <a href="@Url.Action("CikisYap", "Admin")" class="logout-button">Çıkış Yap</a>
        <div class="row g-4">
            <div class="col-md-3">
                <div class="card h-100" style="margin-bottom: 30px;">
                    <div class="card-body text-center">
                        <h5 class="card-title">Bölümler</h5>
                        <p class="card-text">Bölümlerle ilgili işlemler için.</p>
                        <a href="@Url.Action("BolumIslemleri", "Admin")" class="card-button">İşlemler</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card h-100" style="margin-bottom: 30px;">
                    <div class="card-body text-center">
                        <h5 class="card-title">Departmanlar</h5>
                        <p class="card-text">Departmanlarla ilgili işlemler için.</p>
                        <a href="@Url.Action("DepartmanIslemleri", "Admin")" class="card-button">İşlemler</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card h-100" style="margin-bottom: 30px;">
                    <div class="card-body text-center">
                        <h5 class="card-title">Ders İçeriği</h5>
                        <p class="card-text">Ders içeriği ile ilgili işlemler için.</p>
                        <a href="@Url.Action("DersIcerigiIslemleri", "Admin")" class="card-button">İşlemler</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card h-100" style="margin-bottom: 30px;">
                    <div class="card-body text-center">
                        <h5 class="card-title">Eğitimler</h5>
                        <p class="card-text">Eğitimlerle ilgili işlemler için.</p>
                        <a href="@Url.Action("EgitimIslemleri", "Admin")" class="card-button">İşlemler</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row g-4 mt-4">
            <div class="col-md-3">
                <div class="card h-100" style="margin-bottom: 30px;">
                    <div class="card-body text-center">
                        <h5 class="card-title">Favori İlanlar</h5>
                        <p class="card-text">Favori ilanlarla ilgili işlemler için.</p>
                        <a href="@Url.Action("FavoriIlanlarIslemleri", "Admin")" class="card-button">İşlemler</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card h-100" style="margin-bottom: 30px;">
                    <div class="card-body text-center">
                        <h5 class="card-title">İletişimler</h5>
                        <p class="card-text">İletişimlerle ilgili işlemler için.</p>
                        <a href="@Url.Action("IletisimlerIslemleri", "Admin")" class="card-button">İşlemler</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card h-100" style="margin-bottom: 30px;">
                    <div class="card-body text-center">
                        <h5 class="card-title">İş İlanları</h5>
                        <p class="card-text">İş ilanlarıyla ilgili işlemler için.</p>
                        <a href="@Url.Action("IsIlanlariIslemleri", "Admin")" class="card-button">İşlemler</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card h-100" style="margin-bottom: 30px;">
                    <div class="card-body text-center">
                        <h5 class="card-title">İşverenler</h5>
                        <p class="card-text">İşverenlerle ilgili işlemler için.</p>
                        <a href="@Url.Action("IsverenlerIslemleri", "Admin")" class="card-button">İşlemler</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row g-4 mt-4">
            <div class="col-md-3">
                <div class="card h-100" style="margin-bottom: 30px;">
                    <div class="card-body text-center">
                        <h5 class="card-title">Öğrenciler</h5>
                        <p class="card-text">Öğrencilerle ilgili işlemler için.</p>
                        <a href="@Url.Action("OgrencilerIslemleri", "Admin")" class="card-button">İşlemler</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card h-100" style="margin-bottom: 30px;">
                    <div class="card-body text-center">
                        <h5 class="card-title">Sektörler</h5>
                        <p class="card-text">Sektörlerle ilgili işlemler için.</p>
                        <a href="@Url.Action("SektorlerIslemleri", "Admin")" class="card-button">İşlemler</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card h-100" style="margin-bottom: 30px;">
                    <div class="card-body text-center">
                        <h5 class="card-title">Üniversiteler</h5>
                        <p class="card-text">Üniversitelerle ilgili işlemler için.</p>
                        <a href="@Url.Action("UniversitelerIslemleri", "Admin")" class="card-button">İşlemler</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card h-100" style="margin-bottom: 30px;">
                    <div class="card-body text-center">
                        <h5 class="card-title">Destekler</h5>
                        <p class="card-text">Destekle ilgili işlemler için.</p>
                        <a href="@Url.Action("DestekIslemleri", "Admin")" class="card-button">İşlemler</a>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-QwnBChEYqpR30WBw5fN8KDe9olDQu/VgFfSVYT0Rfjk38m7kOCV3+G7ElXkd0A96" crossorigin="anonymous"></script>
</body>
</html>
