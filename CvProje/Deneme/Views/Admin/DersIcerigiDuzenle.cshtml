    <div class="card p-4">
        <h2 class="baslik">Yeni Ders İçeriği Ekle</h2>
        <div class="row justify-content-center">
            @using (Html.BeginForm("YeniDersIcerigiEkle", "Admin", FormMethod.Post, new { id = "dersIcerigiForm", @class = "mt-4" }))
            {
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    @Html.Label("icerikAdi", "İçerik Adı", new { @class = "form-label", style = "font-size: 18px;" })
                    @Html.TextBox("icerikAdi", null, new { @class = "form-control", style = "width: 200px;", required = "required" }) <br />
                </div>

                <button type="submit" class="card-button">Ekle</button>
            }
        </div>
    </div>
</div>
