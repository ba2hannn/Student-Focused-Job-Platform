@model Deneme.Models.Yetenekler
@{

    Layout = "~/Views/Shared/_Portfolyo.cshtml";
}

<h2>Deneyimler</h2>
<div>
    @using (Html.BeginForm("YetenekEkle", "Yetenekler", FormMethod.Post, new { id = "YetenekEkleForm" }))
    {
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.YetenekAdi,"Yetenek Adı", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.YetenekAdi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.YetenekAdi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Yetenekİcerigi,"Yetenek İçeriği", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Yetenekİcerigi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Yetenekİcerigi, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Yetenek Ekle" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</div>
