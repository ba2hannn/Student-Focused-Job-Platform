@model Deneme.Models.Yetenekler

@{
    Layout = "~/Views/Shared/_Portfolyo.cshtml";
}

@{
    var yetenek = Model;
}

<h2>Eğitimi Düzenle</h2>

@using (Html.BeginForm("YetenekDuzenle", "Yetenekler", FormMethod.Post))
{
    <div class="form-group">
        <div class="mt-3">
            @if (ViewBag.result != null)
            {
                <div class="alert alert-@ViewBag.status" role="alert">
                    @ViewBag.result
                </div>
            }
        </div>
        <br />
        @Html.LabelFor(m => m.YetenekAdi)
        @Html.TextBoxFor(m => m.YetenekAdi, new { @class = "form-control" })
        <br />
        @Html.LabelFor(m => m.Yetenekİcerigi)
        @Html.TextBoxFor(m => m.Yetenekİcerigi, new { @class = "form-control" })
        <br />
        @Html.Hidden("YetenekID", yetenek.YetenekID)
        <button type="submit" class="btn btn-warning">Güncelle</button>
    </div>
}