<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <title>Staj Sitesi</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500&family=Roboto:wght@500;700;900&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="/Models/lib/animate/animate.min.css" rel="stylesheet">
    <link href="/Models/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="/Models/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/Models/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="/Models/css/style.css" rel="stylesheet">
</head>

<body>
    <!-- Spinner Start -->
    <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-grow text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Yükleniyor...</span>
        </div>
    </div>
    <!-- Spinner End -->
    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-lg bg-white navbar-light sticky-top p-0 wow fadeIn" data-wow-delay="0.1s">
        <h1 class="m-0 text-primary">
            @Html.ActionLink((string)ViewBag.IsverenAdi, "AnasayfaIsveren", "Giris", null, new { @class = "text-decoration-none text-primary far fa-building" })
        </h1>
        <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav ms-auto p-4 p-lg-0">
                @Html.ActionLink("Anasayfa", "AnasayfaIsveren", "Giris", null, new { @class = "nav-item nav-link active" })
                <div class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Sayfalar</a>
                    <div class="dropdown-menu rounded-0 rounded-bottom m-0">
                        @Html.ActionLink("İş İlanlarım", "IsIlanlarim", "Ilanlar", null, new { @class = "dropdown-item", target = "_blank" })
                        @Html.ActionLink("İş İlanı Ekleme", "IlanEkle", "Ilanlar", null, new { @class = "dropdown-item", target = "_blank" })
                        @Html.ActionLink("Gelen Başvurular", "IsverenBasvurular", "Ilanlar", null, new { @class = "dropdown-item", target = "_blank" })

                    </div>
                </div>
                @Html.ActionLink("Mesajlar", "IsverenMesajlar", "Ilanlar", null, new { @class = "nav-item nav-link" })
                @Html.ActionLink("Destek", "IsverenDestek", "Destek", null, new { @class = "nav-item nav-link" })
                @Html.ActionLink("Çıkış Yap", "CikisYap", "Giris", null, new { @class = "nav-item nav-link" })

            </div>
        </div>
    </nav>
    <!-- Navbar End -->
    <!-- Feature Start -->
    <div class="container-fluid bg-primary overflow-hidden my-5 px-lg-0">
        @RenderBody()
    </div>
    <!-- Feature End -->
    <!-- Footer Start -->
    <div class="container-fluid bg-dark text-light footer mt-5 pt-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="container py-5">
            <div class="row g-5">
                <div class="col-lg-3 col-md-6">
                    <h5 class="text-light mb-4">Adresimiz</h5>
                    <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i>Bartın, Kutlubey Yerleşkesi</p>
                    <p class="mb-2"><i class="fa fa-phone-alt me-3"></i>0542 794 4084</p>
                    <p class="mb-2"><i class="fa fa-envelope me-3"></i>makan4154@gmail.com</p>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h5 class="text-light mb-4">Hızlı Linkler</h5>
                    @Html.ActionLink("İş İlanlarım", "IsIlanlarim", "Ilanlar", null, new { @class = "btn btn-link" })
                    @Html.ActionLink("İş İlanı Ekle", "IlanEkle", "Ilanlar", null, new { @class = "btn btn-link" })
                    @Html.ActionLink("Gelen Başvurular", "IsverenBasvurular", "Ilanlar", null, new { @class = "btn btn-link" })
                    @Html.ActionLink("Destek", "IsverenDestek", "Destek", null, new { @class = "btn btn-link" })


                </div>
            </div>
        </div>
        <div class="container">
            <div class="copyright">
                <div class="row">
                    <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                        &copy; <a class="border-bottom" href="#">Tüm Hakları Saklıdır.</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square rounded-circle back-to-top"><i class="bi bi-arrow-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/Models/lib/wow/wow.min.js"></script>
    <script src="/Models/lib/easing/easing.min.js"></script>
    <script src="/Models/lib/waypoints/waypoints.min.js"></script>
    <script src="/Models/lib/counterup/counterup.min.js"></script>
    <script src="/Models/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="/Models/lib/tempusdominus/js/moment.min.js"></script>
    <script src="/Models/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="/Models/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="/Models/js/main.js"></script>
</body>

</html>