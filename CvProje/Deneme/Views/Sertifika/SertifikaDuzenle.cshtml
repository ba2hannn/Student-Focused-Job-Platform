@model Deneme.Models.Sertifika

@{
    Layout = "~/Views/Shared/_Portfolyo.cshtml";
}

@{
    var sertifika = Model;
}

<h2>Eğitimi Düzenle</h2>

@using (Html.BeginForm("SertifikaDuzenle", "Sertifika", FormMethod.Post))
{
    <div class="form-group">
        <div class="mt-3">
            @if (ViewBag.result != null)
            {
                <div class="alert alert-@ViewBag.status" role="alert">
                    @ViewBag.result
                </div>
            }
        </div>
        <br />
        @Html.LabelFor(m => m.SertifikaAdi)
        @Html.TextBoxFor(m => m.SertifikaAdi, new { @class = "form-control" })
        <br />
        @Html.LabelFor(m => m.SertifikaAciklamasi)
        @Html.TextBoxFor(m => m.SertifikaAciklamasi, new { @class = "form-control" })
        <br />
        @Html.Hidden("SertifikaID", sertifika.SertifikaID)
        <button type="submit" class="btn btn-warning">Güncelle</button>
    </div>
}