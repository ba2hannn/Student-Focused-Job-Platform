@model Deneme.Models.IlgiAlanlari
@{

    Layout = "~/Views/Shared/_Portfolyo.cshtml";
}

<h2>İlgi Alanları</h2>
<div>
    @using (Html.BeginForm("IlgiAlanlariEkle", "IlgiAlanlari", FormMethod.Post, new { id = "IlgiAlaniEkleForm" }))
    {
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.IlgiAdi,"İlgi Adı", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.IlgiAdi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.IlgiAdi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.IlgiAciklamasi,"İlgi Açıklaması", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.IlgiAciklamasi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.IlgiAciklamasi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="İlgi Alanı Ekle" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</div>
